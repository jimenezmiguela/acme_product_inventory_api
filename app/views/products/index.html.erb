<% if flash[:notice] %>
  <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
<% end %>

<div class="container mt-4">
    <h1 style="font-size: 75px; font-weight: bold; color: #0275d8;">ACME</h1>
    <br><br>
    <h2 class="mb-4">Product Inventory</h1>

  <%= link_to 'New Product', new_product_path, class: 'btn btn-primary mb-3' %>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.quantity %></td>
          <td>
            <%= link_to "View #{product.name} Specs", product_path(product), class: 'btn btn-info btn-sm' %>
            <%= link_to "Update #{product.name}", edit_product_path(product), class: 'btn btn-warning btn-sm' %>
            <%= link_to "Delete #{product.name}", product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
